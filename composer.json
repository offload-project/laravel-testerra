{
  "name": "offload-project/laravel-testerra",
  "description": "A Laravel package for managing beta testing programs with test assignments, bug reporting, and tester invitations.",
  "keywords": [
    "laravel",
    "testing",
    "beta-testing",
    "qa",
    "bug-tracking",
    "test-management",
    "invitations",
    "tester-management"
  ],
  "homepage": "https://github.com/offload-project/laravel-testerra",
  "license": "MIT",
  "authors": [
    {
      "name": "Offload Project"
    }
  ],
  "require": {
    "php": "^8.4",
    "illuminate/support": "^11.0|^12.0",
    "illuminate/database": "^11.0|^12.0",
    "illuminate/queue": "^11.0|^12.0"
  },
  "require-dev": {
    "larastan/larastan": "^3.8.1",
    "laravel/pint": "^1.26.0",
    "offload-project/laravel-invite-only": "^1.0",
    "orchestra/testbench": "^9.0|^10.8.0",
    "pestphp/pest": "^3.0|^4.0",
    "pestphp/pest-plugin-laravel": "^3.0|^4.0"
  },
  "autoload": {
    "psr-4": {
      "OffloadProject\\Testerra\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OffloadProject\\Testerra\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "OffloadProject\\Testerra\\TesterraServiceProvider"
      ],
      "aliases": {
        "Testerra": "OffloadProject\\Testerra\\Facades\\Testerra"
      }
    }
  },
  "scripts": {
    "test": "pest",
    "test-coverage": "pest --coverage",
    "analyse": "phpstan analyse --memory-limit=-1",
    "analyse-baseline": "phpstan analyse --memory-limit=-1 --generate-baseline",
    "pint": "vendor/bin/pint"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
